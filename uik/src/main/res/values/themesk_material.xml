    <style name="ThemeK_MaterialComponents" parent="Theme.MaterialComponents" />
    <style name="ThemeK_MaterialComponents_DayNight" parent="Theme.MaterialComponents.DayNight" />
    <style name="ThemeK_MaterialComponents_DayNight_NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
    <style name="ThemeK_MaterialComponents_DayNight_NoActionBar_Bridge" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
    <style name="ThemeK_MaterialComponents_Light" parent="Theme.MaterialComponents.Light" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_MaterialComponents_Light_NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />
    <style name="ThemeK_MaterialComponents_Light_NoActionBar.Translucent">
        <!--设置状态栏半透明状态, true为半透明, false为不透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--设置导航栏半透明状态, true为半透明, false为不透明-->
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="ThemeK_MaterialComponents_Light_NoActionBar.FullScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:statusBarColor">@color/cok_transparent</item>-->
        <!--        <item name="android:navigationBarColor">@color/cok_transparent</item>-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>
    <style name="ThemeK_MaterialComponents_Light_NoActionBar.Transparent">
        <!-- 设置状态栏背景色为透明 -->
        <!--        <item name="android:statusBarColor">@color/cok_transparent</item>-->
        <!-- 设置导航栏背景色为透明 -->
        <!--        <item name="android:navigationBarColor">@color/cok_transparent</item>-->
        <!-- 设置状态栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- 设置导航栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
    <style name="ThemeK_MaterialComponents_Light_NoActionBar.Translucent.Transparent">
        <item name="android:windowBackground">@color/cok_transparent</item>
    </style>

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_MaterialComponents_Light_DarkActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar" />
    <style name="ThemeK_MaterialComponents_Light_DarkActionBar_Bridge" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge" />
    <style name="ThemeK_MaterialComponents_Light_NoActionBar_Bridge" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />
