    <style name="StyleK_TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="StyleK_TabLayout.Base">
        <!--        <item name="android:layout_height">@dimen/height_40</item>-->
        <item name="tabMaxWidth">0dp</item>
        <!--        <item name="tabIndicator">@drawable/ic_line_blue0177fd_size44</item>-->
        <!--        <item name="tabIndicatorColor">@color/le_blue_0177fd</item>-->
