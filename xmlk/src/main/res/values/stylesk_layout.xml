        <item name="android:background">@android:color/white</item>
    </style>

    <style name="StyleK_TabLayout.Rounded">
        <!--        <item name="android:layout_height">38dp</item>-->
        <!--        <item name="tabIndicator">@drawable/ic_line_white_size38</item>-->
