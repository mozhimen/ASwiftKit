<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--实现BottomSheetDialog圆角效果-->
    <style name="ThemeK_DesignLightBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeK_WightDesignBottomSheetModel</item>
    </style>

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_Material3DayNoAction" parent="Theme.Material3.DayNight.NoActionBar" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_MaterialDayNoActionBridge" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />

    <style name="ThemeK_MaterialDay" parent="Theme.MaterialComponents.DayNight" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_OverlayAppLight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeK_OverlayAppDarkAction" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_WidgetAppLightDropSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner" />

    <style name="ThemeK_WidgetMaterialBtn" parent="@style/Widget.MaterialComponents.Button" />

    <style name="ThemeK_Widget_MaterialComponents_Button" parent="@style/Widget.MaterialComponents.Button" />

    <style name="ThemeK_Widget_MaterialComponents_Button_UnelevatedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

    <style name="ThemeK_Widget_MaterialComponents_Button_TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton" />

    <style name="ThemeK_WidgetMaterialBtnOutlined" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="ThemeK_Widget_MaterialComponents_Button_OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="ThemeK_Widget_MaterialComponents_Button_OutlinedButton_Icon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />

    <style name="ThemeK_WightDesignBottomSheetModel" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeK_WidgetAppAction" parent="Widget.AppCompat.ActionBar" />

    <style name="ThemeK_WidgetAppLightPopupOverflow" parent="Widget.AppCompat.Light.PopupMenu.Overflow" />

    <!--修改toolbar弹出框的位置-->
    <style name="ThemeK_WidgetAppLightPopupOverflow.DisOverlap" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--false表示弹出框位置位于toolbar下面-->
        <item name="overlapAnchor">false</item>
    </style>

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_AppLightDarkAction" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="ThemeK_AppLightNoAction" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ThemeK_AppLightNoAction.Translucent">
        <!--设置状态栏半透明状态, true为半透明, false为不透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--设置导航栏半透明状态, true为半透明, false为不透明-->
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ThemeK_AppLightNoAction.Translucent.Transparent">
        <item name="android:windowBackground">@color/cok_transparent</item>
    </style>

    <style name="ThemeK_AppLightNoAction.Transparent">
        <!-- 设置状态栏背景色为透明 -->
        <!--        <item name="android:statusBarColor">@color/cok_transparent</item>-->
        <!-- 设置导航栏背景色为透明 -->
        <!--        <item name="android:navigationBarColor">@color/cok_transparent</item>-->
        <!-- 设置状态栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- 设置导航栏文字色为深色, true为深色, false为白色 -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="ThemeK_AppLightNoAction.FullScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:statusBarColor">@color/cok_transparent</item>-->
        <!--        <item name="android:navigationBarColor">@color/cok_transparent</item>-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="ThemeK_AppLightDialog" parent="@style/Theme.AppCompat.Light.Dialog" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_AppDayNoAction" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    <!--ThemeK_Dialog-->
    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <style name="ThemeK_Dialog" parent="@android:style/Theme.Dialog" />

    <style name="ThemeK_Dialog.Commons">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否悬浮在activity上-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <!--        <item name="android:windowCloseOnTouchOutside">false</item>&lt;!&ndash;外部点击关闭&ndash;&gt;-->
        <item name="android:backgroundDimEnabled">true</item><!--是否允许背景变暗-->
    </style>

    <style name="ThemeK_Dialog.Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeK_Dialog.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeK_Dialog.Blur">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeK_Dialog.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeK_Dialog.Activity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
<!--        <item name="android:windowAnimationStyle">@style/AnimK_Theme_Activity</item>-->
    </style>

<!--    <style name="ThemeK_Dialog_Animation" parent="AnimK_Theme" />-->
</resources>